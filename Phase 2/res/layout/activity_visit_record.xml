<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hospitalsystem.VisitRecord" >

    <TextView
        android:id="@+id/VisitRecordtextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:text="@string/VisitRecord" />

    <TextView
        android:id="@+id/VisitRecordtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VisitRecordtextView1"
        android:layout_centerHorizontal="true"
        android:text="@string/notFunctional"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/VisitRecordtextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/VisitRecordtextView1"
        android:layout_below="@+id/VisitRecordtextView2"
        android:layout_marginLeft="28dp"
        android:text="@string/at" />

    <TextView
        android:id="@+id/VisitRecordtextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/VisitRecordtextView3"
        android:layout_alignBottom="@+id/VisitRecordtextView3"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/VisitRecordtextView3"
        android:text="@string/notFunctionaltime" />

    <Button
        android:id="@+id/VisitRecordbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:text="@string/Update" />

</RelativeLayout>
